    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=15/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
    
    reprelist1.append(0)
    
    
    if pop_uplist[0]==0 :
        repref0=Frame(root,height=repreh,width=reprew)
        repref0.place(x=0 ,y=(75/100*heigh_valu))
        
        representar=Label(repref0,text='0',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)    
    t1.config(state=NORMAL)
    t1.insert(END,0)
    t1.config(state=DISABLED)
    try:
        t2.config(state=NORMAL)
        t2.delete(INSERT,END)
        t2.delete("1.0","end") 
        t2get=str(eval(t1.get("1.0",END)))
        t2.insert(INSERT,t2get)
        t2.config(state=DISABLED)
    except:
        pass        
    root.after(170,reprefdes)
    
    
def insertd():
    global reprefd
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=15/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
    
   
    
    
    if pop_uplist[0]==0 :
        reprefd=Frame(root,height=repreh,width=reprew)
        reprefd.place(x=(widt_valu/4) ,y=(75/100*heigh_valu))
        
        representar=Label(reprefd,text='.',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)   
    
    
          
    t1.config(state=NORMAL)
    
  
    if '.' not in reprelist1 or '(' in reprelist1 or reprelist1[-1]==')'  :
        try:
            reprelist1.remove('(')
        except :
            pass
        
        reprelist1.append('.') 
        index_dot= reprelist1.index('.')
        
        
        
        if reprelist1[index_dot-1]==1 or  reprelist1[index_dot-1]==2 or reprelist1[index_dot-1]==3 or reprelist1[index_dot-1]==4 or reprelist1[index_dot-1]==5 or reprelist1[index_dot-1]==6 or reprelist1[index_dot-1]==7 or reprelist1[index_dot-1]==8 or reprelist1[index_dot-1]==9 or reprelist1[index_dot-1]==0  :
            t1.insert(END,'.')
            
            
            
        elif reprelist1[index_dot-1]!=1 or  reprelist1[index_dot-1]!=2 or reprelist1[index_dot-1]!=3 or reprelist1[index_dot-1]!=4 or reprelist1[index_dot-1]!=5 or reprelist1[index_dot-1]!=6 or reprelist1[index_dot-1]!=7 or reprelist1[index_dot-1]!=8 or reprelist1[index_dot-1]!=9 or reprelist1[index_dot-1]!=0 or reprelist1[index_dot-1]==')' :
                     
            
                     
            if reprelist1[-2]!=')': 
                t1.insert(END,'0.')    
            elif reprelist1[-2]==')': 
                t1.insert(END,'*0.')           
                    
    
    try:
        t2.config(state=NORMAL)
        t2.delete(INSERT,END)
        t2.delete("1.0","end") 
        t2get=str(eval(t1.get("1.0",END)))
        t2.insert(INSERT,t2get)
        t2.config(state=DISABLED)    
    except:
        pass                
    
        
   # reprelist1.append('.')       
    t1.config(state=DISABLED)
    root.after(170,reprefdes)    
    

def insertdiv():
    global reprefdiv
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=15/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn30=int(24/100*fon20)
    
    
    
    if pop_uplist[0]==0 :
        reprefdiv=Frame(root,height=repreh,width=reprew)
        reprefdiv.place(x=3*(widt_valu/4) ,y=(45/100*heigh_valu))
        
        representar=Label(reprefdiv,text='÷',font=("times",fn30,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)    
    t1.config(state=NORMAL)
    if 1 in reprelist1 or 2 in reprelist1 or 3 in reprelist1 or 4 in reprelist1 or 5 in reprelist1 or 6 in reprelist1 or 7 in reprelist1 or 8 in reprelist1 or 9 in reprelist1 or 0 in reprelist1 or '.' in reprelist1:
        t1.insert(END,'/')
        
        t2.config(state=NORMAL)
        t2.delete("1.0","end")
        t2.config(state=DISABLED)
        #bracketlist[0]=''
        lencount=len(reprelist1)
        for i in range(0,lencount-1):
            reprelist1.pop()
        reprelist1.append('/')
        
    elif reprelist1[-1]<=str(0) or reprelist1[-1]>=str(0) :
        t1.insert("end",'/')  
        
        t2.config(state=NORMAL)
        t2.delete("1.0","end")
        t2.config(state=DISABLED)         
        
        lencount=len(reprelist1)
        for i in range(0,lencount-1):
            reprelist1.pop()
        reprelist1.append('/')                
        
    else :
        pass        
    t1.config(state=DISABLED)
    root.after(170,reprefdes)        
            
  
