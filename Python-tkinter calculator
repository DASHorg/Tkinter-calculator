def enable_tap():
    pop_uplist[0]=0
    tapshotext[0]='Disable \ntap shower'
    bh.config(text='Disable \ntap shower')
    tapshocom[0]=disable_tap
    closes()




def disable_tap():
    pop_uplist[0]=1
    tapshotext[0]='Enable \ntap shower'
    bh.config(text='Enable \ntap shower')
    tapshocom[0]=enable_tap
    closes()
    










tapshotext=['Disable \ntap shower'] 
tapshocom=[disable_tap]




def closes():
    bst.config(text='Setting ▼',command=opens)
    stf.destroy()
    


##stfh=pass

def opens():
    global stf
    global bh
    global bdm
    global bcl
    global line
    heigh_valu=root.winfo_screenheight()
    bst.config(text='Setting ▲',command=closes)
    stf=Frame(root,bg='black' )
    stf.place(x=0,y=(5/100*heigh_valu)+2)# this is taking the current position of the frame because if i open it after screen size or orientation changes is it will still took the last height value it had read and can't even use (height_valu) which is continiously checking because it hasn't reached their  
    
    if dmlist[0]==0:
        bh=Button(stf,text=tapshotext[0] ,font=("times",int(fo7list[0]),"bold") ,borderwidth=0,bd=0,highlightthickness=0,anchor=W,justify=LEFT,command=tapshocom[0])
        bh.pack(fill='x')
        bdm=Button(stf,text='Enable \ndark mode',font=("times",int(fo7list[0]),"bold"),borderwidth=0,bd=0,highlightthickness=0,anchor=W,justify=LEFT,command=enabledm)
        bdm.pack(fill='x')
        line=Label(stf,font='times 0 bold',pady=0,bg='black')
        line.pack(fill='x')
        bcl=Button(stf,text='Close',font=("times",int(fo7list[0]),"bold"),borderwidth=2,bd=0,highlightthickness=0,anchor=W,command=closes)
        bcl.pack(fill='x')
        
        
    elif dmlist[0]==1:
        bh=Button(stf,text=tapshotext[0] ,font=("times",int(fo7list[0]),"bold"),borderwidth=0,bd=0,highlightthickness=0,anchor=W,bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white',justify=LEFT,command=tapshocom[0])
        bh.pack(fill='x')
        bdm=Button(stf,text='Disable \ndark mode',font=("times",int(fo7list[0]),"bold"),borderwidth=0,bd=0,highlightthickness=0,anchor=W,justify=LEFT,command=disabledm,bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white')
        bdm.pack(fill='x')
        line=Label(stf,font='times 0 bold',pady=0,bg='white')
        line.pack(fill='x')
        bcl=Button(stf,text='Close',font=("times",int(fo7list[0]),"bold"),borderwidth=2,bd=0,highlightthickness=0,anchor=W,command=closes,bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white')
        bcl.pack(fill='x')        




bst=Button(fs,text='Setting ▼',activebackground='white',font=("times",fo10,"bold"),bg='white',borderwidth=0,bd=0,highlightthickness=0,command=opens)
bst.place(x=0,y=0)










hlist=[0]
wlist=[0]

def check_again():
    global height_valu
    global width_valu
    width_valu=root.winfo_screenwidth()
    height_valu=root.winfo_screenheight()
    if wlist[0]!=0 and hlist[0]!=0:
        if wlist[0]!=width_valu and hlist[0]!=height_valu:
            root.geometry("%dx%d+0+0" % (width_valu,height_valu) ) 
            resize()
    
    hlist[0]=height_valu
    wlist[0]=width_valu
    
    rep()



def rep():
    my_label=Label(root)
    my_label.after(170,check_again)
    
rep()    





root.mainloop()