from tkinter import *

root=Tk()

root.overrideredirect(True)

width_value=root.winfo_screenwidth()
height_value=root.winfo_screenheight()

root.geometry("%dx%d+0+0" % (width_value,height_value) )


def resize():
    a=30/100*height_valu
    b=15/100*height_valu
    c=10/100*height_valu
    de=5/100*height_valu
    a=30/100*height_valu
    spacing=int(4/100*a)
    t1fo=int(4/100*a)
    x1=width_valu/4
    y1=(50/100*height_valu)/5
    font20=(10/100*height_valu)
    fo28=int(22/100*font20)
    fo35=int(28/100*font20)
    fo30=int(24/100*font20)
    fo20=int(16/100*font20)
    font5=(5/100*height_valu)
    fo10=int(16/100*font5)
    fo15=int(24/100*font5)
    fo7=(0.6/100*height_valu)
    
    fo7list[0]=fo7
    
    
    f1.config(height=a)
    f2.config(height=b)
    f3.config(height=c)
    f4.config(height=c)
    f5.config(height=c)
    f6.config(height=c)
    f7.config(height=c)
    fs.config(height=de)
    fc.config(height=de,width=de)
    bst.config(font=("times",fo10,"bold"))
    bcu.config(font=("times",fo15,"bold"))
    t1.config(font=("times",t1fo,"bold"),spacing2=spacing)
    t2.config(font=("times",t1fo,"bold"),spacing2=spacing)
    
    
    bc.place(x=0)
    bb.place(x=(x1))
    bp.place(x=(x1*2))
    bd.place(x=(x1*3))
    
    b7.place(x=0)
    b8.place(x=(x1))
    b9.place(x=(x1*2))
    bv.place(x=(x1*3))
    
    b4.place(x=0)
    b5.place(x=(x1))
    b6.place(x=(x1*2))
    bm.place(x=(x1*3))
    
    b1.place(x=0)
    b2.place(x=(x1))
    b3.place(x=(x1*2))
    bs.place(x=(x1*3))
    
    b0.place(x=0)
    bdo.place(x=(x1))
    be.place(x=(x1*2))
    ba.place(x=(x1*3))
    
    try:
        stf.place(x=0,y=de+2)
        bh.config(font=("times",int(fo7list[0]),"bold"))
        bdm.config(font=("times",int(fo7list[0]),"bold"))      
        bcl.config(font=("times",int(fo7list[0]),"bold"))
        
    except:
        pass
    #stf.place(x=0,y=de)
    
    bd.config(font=("times", fo20 ,"bold"))
    bp.config(font=("times", fo20 ,"bold"))
    bb.config(font=("times", fo20 ,"bold"))
    bc.config(font=("times", fo20 ,"bold"))
    b7.config(font=("times", fo20 ,"bold"))
    b8.config(font=("times", fo20 ,"bold"))
    b9.config(font=("times", fo20 ,"bold"))
    bv.config(font=("times", fo30 ,"bold"))
    b4.config(font=("times", fo20 ,"bold"))
    b5.config(font=("times", fo20 ,"bold"))
    b6.config(font=("times", fo20 ,"bold"))
    bm.config(font=("times", fo30 ,"bold"))
    b1.config(font=("times", fo20 ,"bold"))
    b2.config(font=("times", fo20 ,"bold"))
    b3.config(font=("times", fo20 ,"bold"))
    bs.config(font=("times", fo20 ,"bold"))
    b0.config(font=("times", fo20 ,"bold"))
    bdo.config(font=("times", fo20 ,"bold"))
    be.config(font=("times", fo28 ,"bold"))
    ba.config(font=("times", fo35 ,"bold"))
    





def enabledm():
    dmlist[0]=1
    
    
    
    bst.config(bg='black',fg='white',activebackground='black',activeforeground='white')
    bh.config(bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white')
    bdm.config(bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white',text='Disable \ndark mode',command=disabledm)
    line.config(bg='white')
    bcl.config(bg='#3D3C3C',fg='white',activebackground='#3D3C3C',activeforeground='white')
    
    fs.config(bg='black')
    bcu.config(bg='black',activebackground='black')
    
    t1.config(bg='black',fg='white')
    t2.config(bg='black',fg='white')
    
    bd.config(bg='#5C5C5C',fg='white',activebackground='#5C5C5C',activeforeground='white')
    bp.config(bg='#5C5C5C',fg='white',activebackground='#5C5C5C',activeforeground='white')
    bb.config(bg='#5C5C5C',fg='white',activebackground='#5C5C5C',activeforeground='white')
    bc.config(bg='#5C5C5C',fg='white',activebackground='#5C5C5C',activeforeground='white')

    b7.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b8.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b9.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    bv.config(bg='#404040',fg='white',activebackground='#404040',activeforeground='white')
    
    b4.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b5.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b6.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    bm.config(bg='#404040',fg='white',activebackground='#404040',activeforeground='white')
    
    b1.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b2.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    b3.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    bs.config(bg='#404040',fg='white',activebackground='#404040',activeforeground='white')
    
    b0.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    bdo.config(bg='#111111',fg='white',activebackground='#111111',activeforeground='white')
    be.config(bg='#232323',fg='white',activebackground='#232323',activeforeground='white')
    ba.config(bg='#404040',fg='white',activebackground='#404040',activeforeground='white')
    

    reprebg[0]='#4C4B4B'
    reprefg[0]='white'
    closes()




