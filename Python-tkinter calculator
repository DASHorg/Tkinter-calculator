reprelist=[0]# this control the dot
reprelist1=['sk']# this control function(/,+,etc)
bracketlist=[0]#this control which bracket to be applied
pop_uplist=[0]#this control the 



def insert1():
    global repref1
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=15/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
    
    reprelist1.append(1)
   
    if pop_uplist[0]==0 :
        repref1=Frame(root,height=repreh,width=reprew)
        repref1.place(x=0,y=(65/100*heigh_valu))
        
        representar=Label(repref1,text='1',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)
    
    
    
    
    t1.config(state=NORMAL)
    if reprelist1[-2]==')':
        t1.insert(END,'*1')
    elif reprelist1[-2]!=')':
        t1.insert(END,'1')    
    t1.config(state=DISABLED)    
    if '(' not in reprelist1:
        try:
            t2.config(state=NORMAL)
            t2.delete(INSERT,END)
            t2.delete("1.0","end") 
            t2get=str(eval(t1.get("1.0","end")))
            t2.insert(INSERT,t2get)
            t2.config(state=DISABLED)
        except:
            pass            
    else:
        pass        
    root.after(170,reprefdes)
