def cleart():
    global reprefcl
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=10/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn30=int(24/100*fon20)
    
    reprlength=len(reprelist1)
    for i in range(0,(reprlength-1)):
         reprelist1.pop()
    
    
    if pop_uplist[0]==0 :
        reprefcl=Frame(root,height=repreh,width=reprew)
        reprefcl.place(x=0 ,y=(40/100*heigh_valu))
        
        representar=Label(reprefcl,text='C',font=("times",fn30,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)  
    t1. config(state=NORMAL)  
    t2. config(state=NORMAL)  
    t1.delete("1.0","end")
    t2.delete("1.0","end")
    t1. config(state=DISABLED)  
    t2. config(state=DISABLED)  
    bracketlist[0]=0 
    
    
    
    
    root.after(130,reprefdes)        



def brackett1():
    global reprefbr
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=10/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
    
    
    
    
    
    
    
    if pop_uplist[0]==0 :
        reprefbr=Frame(root,height=repreh,width=reprew)
        reprefbr.place(x=(widt_valu/4)  ,y=(40/100*heigh_valu))
        
        if bracketlist[0]==0:
            representar=Label(reprefbr,text='(',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)  
            
        elif  bracketlist[0] != 0:
             representar=Label(reprefbr,text=')',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)
         
    
    
    #if reprelist1[-1]!='.':    
    t1.config(state=NORMAL)
    if bracketlist[0]==0 or reprelist1[-1]=='/' or reprelist1[-1]=='*' or reprelist1[-1]=='-' or reprelist1[-1]=='+' :
                     

            bracketget=bracketlist[0]
            addbra=bracketget+1
            bracketlist[0]=addbra
            
            
            if reprelist1[-1] ==1 or  reprelist1[-1] ==2 or  reprelist1[-1] ==3 or  reprelist1[-1] ==4 or  reprelist1[-1] ==5 or  reprelist1[-1] ==6 or  reprelist1[-1] ==7 or  reprelist1[-1] ==8 or  reprelist1[-1] ==9 or  reprelist1[-1] ==0 or  reprelist1[-1] =='.' or reprelist1[-1] ==')' :  
                reprelist1.append('*(')
                t1.insert(END,'*(')
          
                lencount=len(reprelist1)
                for i in range(0,lencount-1):
                    reprelist1.pop()
            else:                
                reprelist1.append('(')
                t1.insert(END,'(')
           
    elif bracketlist[0] > 0:
            
            if 1 in reprelist1 or 2 in reprelist1 or 3 in reprelist1 or 4 in reprelist1 or 5 in reprelist1 or 6 in reprelist1 or 7 in reprelist1 or 8 in reprelist1 or 9 in reprelist1 or 0 in reprelist1 or '.' in reprelist1 :
                bracketget=bracketlist[0]#this is 
                addbra=bracketget-1#inside 
                bracketlist[0]=addbra#because of it not it will not subtract the number which control the type of bracket until this if function is not true 
                try:
                    reprelist1.remove('(')
                except:
                    pass
                t1.insert(END,')')

                    
                t2.config(state=NORMAL)   
                reprelist1.append(')')
                try:     
                    t2.delete("1.0","end") 
                    t2get=str(eval(t1.get("1.0",END)))
                    t2.insert(INSERT,t2get)
                except:
                    t2.insert('end','undefined')    
                t2.config(state=DISABLED)       
    t1.config(state=DISABLED)
    
    
    
    
    
    
        
    root.after(130,reprefdes)        




def power_bu():
    global reprefpower
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=10/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
    
    
    
    
    
    if pop_uplist[0]==0 :
        reprefpower=Frame(root,height=repreh,width=reprew)
        reprefpower.place(x=2*(widt_valu/4)  ,y=(40/100*heigh_valu))
        
        representar=Label(reprefpower,text='x^(',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)  

    if reprelist1[-1] ==1 or  reprelist1[-1] ==2 or  reprelist1[-1] ==3 or  reprelist1[-1] ==4 or  reprelist1[-1] ==5 or  reprelist1[-1] ==6 or  reprelist1[-1] ==7 or  reprelist1[-1] ==8 or  reprelist1[-1] ==9 or  reprelist1[-1] ==0 or  reprelist1[-1] =='.' or  reprelist1[-1] ==')'  :   
        
        t1.config(state=NORMAL) 
        t1.insert("end","**(")                     
        t1.config(state=DISABLED)    
        bracketget=bracketlist[0]
        addbra=bracketget+1
        bracketlist[0]=addbra
        lencount=len(reprelist1)
        for i in range(0,lencount-1):
            reprelist1.pop()
    
    root.after(130,reprefdes)



def del_last():
    global repreflast
    widt_valu=root.winfo_screenwidth()
    heigh_valu=root.winfo_screenheight()
    repreh=10/100*heigh_valu
    reprew=widt_valu/4
    fon20=(10/100*heigh_valu)
    fn20=int(16/100*fon20)
        
    
    
    if pop_uplist[0]==0 :
        repreflast=Frame(root,height=repreh,width=reprew)
        repreflast.place(x=3*(widt_valu/4)  ,y=(40/100*heigh_valu))
        
        representar=Label(repreflast,text='⌫',font=("times",fn20,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)  
            

    t1. config(state=NORMAL)  
    
   
    
    
    
    last_ele_list=['op']
    
    last_ele_list[0]=t1.get("end-2c","end-1c")
   

    t1.delete("end-2c","end")  
    
    
    
    
    
    
    try:  
        reprelist1.pop()  
    except:
        pass 
        
        
    if  last_ele_list[0]=='(':
            
            bracketget=bracketlist[0]
            addbra=bracketget-1
            bracketlist[0]=addbra  
            
            
    if  last_ele_list[0]==')':
            
            bracketget=bracketlist[0]
            addbra=bracketget+1
            bracketlist[0]=addbra              
                
    
    
    
    
    
    t1. config(state=DISABLED)  
    
    if 'sk' not in reprelist1:
        reprelist1.append('sk')
        
        
        
        
    
    
    
    try:
        t2.config(state=NORMAL)
        t2.delete(INSERT,END)
        t2.delete("1.0","end") 
        t2get=str(eval(t1.get("1.0",END)))
        t2.insert(INSERT,t2get)
        
    except:
        pass
    t2.config(state=DISABLED)
    
    
    root.after(130,reprefdes)






def equal_press():
        global reprefequal
        widt_valu=root.winfo_screenwidth()
        heigh_valu=root.winfo_screenheight()
        repreh=15/100*heigh_valu
        reprew=widt_valu/4
        fon20=(10/100*heigh_valu)
        fn28=int(22/100*fon20)
        
        
            
        
        
        if pop_uplist[0]==0 :
            reprefequal=Frame(root,height=repreh,width=reprew)
            reprefequal.place(x=2*(widt_valu/4)  ,y=(75/100*heigh_valu))
            
            representar=Label(reprefequal,text='=',font=("times",fn28,"bold"),bg=reprebg[0],fg=reprefg[0]).place(x=0,y=0,relwidth=1,relheight=1)
        
        t1.config(state=NORMAL)
        t2.config(state=NORMAL)
        
        
        
        last_ele_list=['op']
         
        last_ele_list[0]=t1.get("end-2c","end-1c")
   
        
        
        if  last_ele_list[0]=='(':
            
            bracketget=bracketlist[0]
            addbra=bracketget-1
            bracketlist[0]=addbra  
            
            
        if  last_ele_list[0]==')':
            
            bracketget=bracketlist[0]
            addbra=bracketget+1
            bracketlist[0]=addbra     
        
        
        
        
        t2_content=t2.get("1.0","end-1c")
        t1.delete("1.0","end")
        t2.delete("1.0","end")
        t1.insert("1.0",t2_content)
        
         
        lencount=len(reprelist1)
        for i in range(0,lencount-1):
            reprelist1.pop()
        reprelist1.append(t2_content) 
          
            
        
        
        
        t1.config(state=DISABLED)
        t2.config(state=DISABLED)
        
         
           
            
                
        root.after(170,reprefdes)




























